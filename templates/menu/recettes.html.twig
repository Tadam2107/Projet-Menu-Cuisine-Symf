{% extends 'base.html.twig' %}

{% block title %}Hello MenuController!{% endblock %}

{% block body %}

     <section id="pricing" class="logtitre">
            <div id="w">
                <div class="pricing-filter">
                    <div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <div class="section-header">
                                        <h2 class="pricing-title">Nos recettes</h2>
                                        <ul id="filter-list" class="clearfix">
                                            <li class="filter" data-filter="all">Tout</li>
                                            <li class="filter" data-filter=".entrees">Entrées</li>
                                            <li class="filter" data-filter=".plats">Plats</li>
                                            <li class="filter" data-filter=".desserts">Desserts</li>                                  
                                        </ul><!-- @end #filter-list -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

  <div class="container">
  

        <div class="row">
             <div class="col-md-10 col-md-offset-1">
                <ul id="menu-pricing" class="menu-price">
                        {% if menus | length < 1 %}
                        <p>Aucun article</p>
                    {% else %}
                    {% for menu in menus %}
                    	
                  
                        <div class="ingredients {{menu.slug}}">
                          <h2>{{menu.ingredients}}</h2>
                          <button type="button" class="btn btn-primary" onclick="fermerComposition()">Fermer </button>
                        </div>

                        <li class="item {{menu.categorie.slug}}">
                                    <a href="">
                                    <img class="img-fluid" width="300" src="{{asset('images/uploads/menus/'~ menu.image)}}" alt="{{ menu.slug }}"  class="img-responsive">
                                        <div class="menu-desc text-center">
                                            <span>
                                                <h3>{{menu.nom}}</h3>
                                                <h4>{{menu.user.pseudo}}</h4>
                                            </span>
                                        </div>
                                    </a>
                                    <button type="button" class="btn btn-primary" onclick="afficheComposition()">Afficher la composition </button>
                                    <h6 class="white">Posté le : {{ menu.createdAt | date('d/m/Y',"Europe/Paris")}}</h6>
                                </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
            
                

                            <!-- <div class="text-center">
                                    <a id="loadPricingContent" class="btn btn-middle hidden-sm hidden-xs">Load More <span class="caret"></span></a>
                            </div> -->

             
        </section>
{% endblock %}

  {% block javascripts %}
  
  <script>
  
  function afficheComposition(){
    document.querySelector(".ingredients").style.display="block";
  }
  
  function fermerComposition(){
    document.querySelector(".ingredients").style.display="none";
    document.location.reload();
  }
  </script>
  
  {% endblock %}